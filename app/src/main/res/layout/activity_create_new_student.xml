<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/green_gradnt"
    tools:context=".CreateNewStudent">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create a Student profile"
        android:textColor="#fff"
        android:textSize="25sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="50dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name : "
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="18sp"
            />


        <EditText
            android:id="@+id/nameOfReg"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:textColor="#000000"
            android:textSize="18sp"
            android:inputType="textPersonName"
            android:backgroundTint="#A7A7A7"
            android:layout_marginLeft="5dp"
           />


    </LinearLayout>
    <Space
        android:layout_width="0dp"
        android:layout_height="15dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Class : "
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="18sp"
            />


        <EditText
            android:id="@+id/calssOfReg"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:textColor="#000000"
            android:textSize="18sp"
            android:inputType="text"
            android:backgroundTint="#A7A7A7"
            android:layout_marginLeft="5dp"
            />


    </LinearLayout>
    <Space
        android:layout_width="0dp"
        android:layout_height="15dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Roll : "
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="18sp"
            />


        <EditText
            android:id="@+id/rollOfReg"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:textColor="#000000"
            android:textSize="18sp"
            android:inputType="number"
            android:backgroundTint="#A7A7A7"
            android:layout_marginLeft="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sec : "
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="18sp"
            />

        <EditText
            android:id="@+id/secOfRow"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:textColor="#000000"
            android:textSize="18sp"
            android:inputType="text"
            android:backgroundTint="#A7A7A7"
            android:layout_marginLeft="5dp"
            />


    </LinearLayout>
    <Space
        android:layout_width="0dp"
        android:layout_height="15dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone\n(guardian) : "
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="18sp"
            />


        <EditText
            android:id="@+id/phOfREg"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:textColor="#000000"
            android:textSize="18sp"
            android:inputType="phone"
            android:backgroundTint="#A7A7A7"
            android:layout_marginLeft="5dp"
            />


    </LinearLayout>
    <Space
        android:layout_width="0dp"
        android:layout_height="15dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Addresss : "
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="18sp"
            />


        <EditText
            android:id="@+id/adressOfReg"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:textColor="#000000"
            android:textSize="18sp"
            android:inputType="text"
            android:backgroundTint="#A7A7A7"
            android:layout_marginLeft="5dp"
            />


    </LinearLayout>
    <Space
        android:layout_width="0dp"
        android:layout_height="15dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date of\nAddmision : "
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/doaOfReg"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:textColor="#000000"
            android:textSize="18sp"
            android:inputType="date"

            android:backgroundTint="#A7A7A7"
            android:layout_marginLeft="5dp"
            />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="bottom|center"
        android:weightSum="2"

        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        >

        <Button
            android:id="@+id/createStudentBtn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="#0AAF3D"
            android:drawableStart="@drawable/ic_close_white_24dp"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="Create"
            android:textColor="#FFFFFF"
            android:textSize="20sp"

            />
        <Button

            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="#FF0000"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="Cancel"
            android:drawableStart="@drawable/ic_check_white"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            />
    </LinearLayout>






</LinearLayout>